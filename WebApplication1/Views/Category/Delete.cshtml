@using WebApplication1.Entities;

@model Category

<form asp-action="Delete" asp-controller="Category" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Category Name:</label>
                <input asp-for="CategoryName" disabled type="text" class="form-control required" placeholder="Enter Category name" tabindex="1">
            </div>
            
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">
                        Delete Category
                    </button>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

