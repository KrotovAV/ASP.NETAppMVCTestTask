@using WebApplication1.Entities;

@model Contact

<form asp-action="DeleteConfirmed" asp-controller="Contacts" method="post" asp-append-version="true">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="alert alert-danger">
                            <h3>Are you sure you want to delete this?</h3>
                        </div>
                        Detail Contact ID @Model.Id
                    </div>
                    <div class="card-body">
                        <p class="card-text">First Name: @Model.FirstName</p>
                        <p class="card-text">Last Name: @Model.LastName</p>
                        <p class="card-text">Birth Date: @Model.BirthDate</p>
                        <p class="card-text">Email: @Model.Email</p>
                        <p class="card-text">Mobile: @Model.Mobile</p>
                        @if (@Model.UnDeleteAble == true)
                        {
                            <p class="card-text">DeleteAble: yes</p>
                        }
                        else
                        {
                            <p class="card-text">DeleteAble: no</p>
                        }
                        <p class="card-text">Priority: @Model.PriorityType</p>
                        <p class="card-text">Category: @Model.Category?.CategoryName</p>
                        @{
                            string imagePath = "~/img/" + @Model.PhotoPath;
                        }
                        <img src="@imagePath" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
                        <p class="card-text">Photo:</p>
                        
                    </div>
                </div>
            </div>
            
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">
                        Delete Contact
                    </button>
                    <a asp-action="Index" asp-controller="Contacts" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>
